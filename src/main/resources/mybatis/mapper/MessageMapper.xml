<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.xu.infrastructure.persistent.dao.MessageMapper">

    <resultMap id="BaseResultMap" type="cn.xu.infrastructure.persistent.po.Message">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="type" column="type" jdbcType="TINYINT"/>
        <result property="senderId" column="sender_id" jdbcType="BIGINT"/>
        <result property="receiverId" column="receiver_id" jdbcType="BIGINT"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
        <result property="targetId" column="target_id" jdbcType="BIGINT"/>
        <result property="isRead" column="is_read" jdbcType="TINYINT"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,type,sender_id,receiver_id,title,content,target_id,is_read,create_time,update_time
    </sql>

    <insert id="insert" parameterType="cn.xu.infrastructure.persistent.po.Message" useGeneratedKeys="true" keyProperty="id">
        insert into message
        (type, sender_id, receiver_id, title, content, target_id, is_read, create_time, update_time)
        values
        (#{type}, #{senderId}, #{receiverId}, #{title}, #{content}, #{targetId}, #{isRead}, #{createTime}, #{updateTime})
    </insert>

    <update id="update" parameterType="cn.xu.infrastructure.persistent.po.Message">
        update message
        <set>
            <if test="type != null">type = #{type},</if>
            <if test="senderId != null">sender_id = #{senderId},</if>
            <if test="receiverId != null">receiver_id = #{receiverId},</if>
            <if test="title != null">title = #{title},</if>
            <if test="content != null">content = #{content},</if>
            <if test="targetId != null">target_id = #{targetId},</if>
            <if test="isRead != null">is_read = #{isRead},</if>
            update_time = #{updateTime}
        </set>
        where id = #{id}
    </update>

    <select id="selectById" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from message
        where id = #{id}
    </select>

    <select id="selectByUserId" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from message
        where receiver_id = #{userId}
        <if test="type != null">
            and type = #{type}
        </if>
        order by create_time desc
        limit #{offset}, #{limit}
    </select>

    <select id="countUnreadMessages" resultType="long">
        select count(*)
        from message
        where receiver_id = #{userId} and is_read = 0
    </select>

    <update id="markAsRead">
        update message
        set is_read = 1,
            update_time = now()
        where id = #{messageId}
    </update>

    <update id="markAllAsRead">
        update message
        set is_read = 1,
            update_time = now()
        where receiver_id = #{userId} and is_read = 0
    </update>

    <delete id="deleteById">
        delete from message
        where id = #{id}
    </delete>

    <select id="exists" resultType="boolean">
        select count(1) from message where id = #{id}
    </select>
</mapper>
