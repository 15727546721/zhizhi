<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.xu.infrastructure.persistent.dao.ITopicCategoryDao">

    <resultMap id="BaseResultMap" type="cn.xu.infrastructure.persistent.po.TopicCategoryPO">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="description" property="description" jdbcType="VARCHAR"/>
        <result column="sort" property="sort" jdbcType="INTEGER"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id
        , name, description, sort, create_time, update_time
    </sql>

    <insert id="insert" parameterType="cn.xu.infrastructure.persistent.po.TopicCategoryPO">
        insert into topic_category (name, description, sort, create_time, update_time)
        values (#{name}, #{description}, #{sort}, now(), now())
    </insert>

    <update id="update" parameterType="cn.xu.infrastructure.persistent.po.TopicCategoryPO">
        update topic_category
        set name        = #{name},
            description = #{description},
            sort        = #{sort},
            update_time = now()
        where id = #{id}
    </update>

    <delete id="deleteById" parameterType="java.lang.Long">
        delete
        from topic_category
        where id = #{id}
    </delete>

    <select id="findById" resultMap="BaseResultMap" parameterType="java.lang.Long">
        select
        <include refid="Base_Column_List"/>
        from topic_category
        where id = #{id}
    </select>

    <select id="findAll" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from topic_category
        order by sort asc
    </select>

    <select id="findByName" resultMap="BaseResultMap" parameterType="java.lang.String">
        select
        <include refid="Base_Column_List"/>
        from topic_category
        where name = #{name}
    </select>
</mapper> 