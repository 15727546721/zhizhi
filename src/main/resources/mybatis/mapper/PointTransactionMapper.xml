<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.xu.infrastructure.persistent.dao.PointTransactionMapper">

    <resultMap id="pointTransactionMap" type="cn.xu.infrastructure.persistent.po.PointTransaction">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="change_amount" property="changeAmount"/>
        <result column="change_type" property="changeType"/>
        <result column="order_id" property="orderId"/>
        <result column="description" property="description"/>
        <result column="balance_after" property="balanceAfter"/>
        <result column="status" property="status"/>
        <result column="related_id" property="relatedId"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <insert id="insert" parameterType="cn.xu.infrastructure.persistent.po.PointTransaction" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO point_transaction (
            user_id,
            change_amount,
            change_type,
            order_id,
            description,
            balance_after,
            status,
            related_id,
            create_time,
            update_time
        ) VALUES (
            #{userId},
            #{changeAmount},
            #{changeType},
            #{orderId},
            #{description},
            #{balanceAfter},
            #{status},
            #{relatedId},
            NOW(),
            NOW()
        )
    </insert>

    <select id="findByUserId" resultMap="pointTransactionMap">
        SELECT *
        FROM point_transaction
        WHERE user_id = #{userId}
        ORDER BY create_time DESC
        LIMIT #{offset}, #{limit}
    </select>

    <select id="findByUserIdAndType" resultMap="pointTransactionMap">
        SELECT *
        FROM point_transaction
        WHERE user_id = #{userId} AND change_type = #{changeType}
        ORDER BY create_time DESC
        LIMIT #{offset}, #{limit}
    </select>

    <select id="countTodayEarnTransactions" resultType="int">
        SELECT COUNT(*)
        FROM point_transaction
        WHERE user_id = #{userId}
          AND change_type = #{changeType}
          AND change_amount > 0
          AND DATE(create_time) = CURDATE()
    </select>

</mapper>