<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.xu.repository.mapper.UserBadgeMapper">

    <resultMap id="BaseResultMap" type="cn.xu.model.entity.UserBadge">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="userId" column="user_id" jdbcType="BIGINT"/>
        <result property="badgeId" column="badge_id" jdbcType="BIGINT"/>
        <result property="badgeName" column="badge_name" jdbcType="VARCHAR"/>
        <result property="badgeDescription" column="badge_description" jdbcType="VARCHAR"/>
        <result property="badgeIcon" column="badge_icon" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
        <result property="obtainTime" column="obtain_time" jdbcType="TIMESTAMP"/>
        <result property="expireTime" column="expire_time" jdbcType="TIMESTAMP"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, user_id, badge_id, badge_name, badge_description, badge_icon, status, obtain_time, expire_time, create_time, update_time
    </sql>

    <select id="findByUserId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM user_badge
        WHERE user_id = #{userId}
    </select>

    <insert id="insert" parameterType="cn.xu.model.entity.UserBadge" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user_badge (user_id, badge_id, badge_name, badge_description, badge_icon, status, obtain_time, expire_time, create_time, update_time)
        VALUES (#{userId}, #{badgeId}, #{badgeName}, #{badgeDescription}, #{badgeIcon}, #{status}, #{obtainTime}, #{expireTime}, now(), now())
    </insert>

    <update id="update" parameterType="cn.xu.model.entity.UserBadge">
        UPDATE user_badge
        SET status = #{status},
            obtain_time = #{obtainTime},
            expire_time = #{expireTime},
            update_time = now()
        WHERE id = #{id}
    </update>

    <select id="existsByUserIdAndBadgeId" resultType="boolean">
        SELECT COUNT(1) > 0
        FROM user_badge
        WHERE user_id = #{userId} AND badge_id = #{badgeId} AND status = 1
    </select>

</mapper>