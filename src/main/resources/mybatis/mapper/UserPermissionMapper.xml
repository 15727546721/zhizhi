<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.xu.infrastructure.persistent.dao.UserPermissionMapper">

    <resultMap id="BaseResultMap" type="cn.xu.infrastructure.persistent.po.UserPermission">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="userId" column="user_id" jdbcType="BIGINT"/>
        <result property="permissionId" column="permission_id" jdbcType="BIGINT"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- 批量保存用户权限关联 -->
    <insert id="saveUserPermissions">
        INSERT INTO user_permission (user_id, permission_id, create_time) VALUES
        <foreach collection="permissionIds" item="permissionId" separator=",">
            (#{userId}, #{permissionId}, NOW())
        </foreach>
    </insert>
    
    <!-- 删除用户权限关联 -->
    <delete id="deleteUserPermissions">
        DELETE FROM user_permission
        WHERE user_id = #{userId}
        AND permission_id IN
        <foreach collection="permissionIds" item="permissionId" open="(" separator="," close=")">
            #{permissionId}
        </foreach>
    </delete>
    
    <!-- 清除用户的所有权限关联 -->
    <delete id="clearUserPermissions">
        DELETE FROM user_permission
        WHERE user_id = #{userId}
    </delete>
    
    <!-- 根据用户ID查询权限ID列表 -->
    <select id="findPermissionIdsByUserId" resultType="java.lang.Long">
        SELECT permission_id
        FROM user_permission
        WHERE user_id = #{userId}
    </select>
    
    <!-- 根据用户ID和权限ID列表查询用户权限关联 -->
    <select id="findUserPermissions" resultMap="BaseResultMap">
        SELECT id, user_id, permission_id, create_time
        FROM user_permission
        WHERE user_id = #{userId}
        AND permission_id IN
        <foreach collection="permissionIds" item="permissionId" open="(" separator="," close=")">
            #{permissionId}
        </foreach>
    </select>

</mapper>