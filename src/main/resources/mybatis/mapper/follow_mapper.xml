<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.xu.infrastructure.persistent.dao.IFollowDao">
    <resultMap id="BaseResultMap" type="cn.xu.infrastructure.persistent.po.Follow">
        <id column="id" property="id"/>
        <result column="follower_id" property="followerId"/>
        <result column="followed_id" property="followedId"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id
        , follower_id, followed_id, status, create_time
    </sql>

    <insert id="insert" parameterType="cn.xu.infrastructure.persistent.po.Follow">
        INSERT INTO `follow` (follower_id, followed_id, status)
        VALUES (#{followerId}, #{followedId}, #{status})
    </insert>

    <update id="updateStatus">
        UPDATE `follow`
        SET status = #{status}
        WHERE follower_id = #{followerId}
          AND followed_id = #{followedId}
    </update>

    <select id="getByFollowerAndFollowed" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM `follow`
        WHERE follower_id = #{followerId} AND followed_id = #{followedId}
    </select>

    <select id="listByFollowerId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM `follow`
        WHERE follower_id = #{followerId} AND status = 1
        ORDER BY create_time DESC
    </select>

    <select id="listByFollowedId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM `follow`
        WHERE followed_id = #{followedId} AND status = 1
        ORDER BY create_time DESC
    </select>

    <select id="countFollowing" resultType="java.lang.Integer">
        SELECT COUNT(*)
        FROM `follow`
        WHERE follower_id = #{followerId}
          AND status = 1
    </select>

    <select id="countFollowers" resultType="java.lang.Integer">
        SELECT COUNT(*)
        FROM `follow`
        WHERE followed_id = #{followedId}
          AND status = 1
    </select>
    <select id="findStatus" resultType="java.lang.Integer">
        SELECT status
        FROM `follow`
        WHERE follower_id = #{followerId}
          AND followed_id = #{followedId}
    </select>
</mapper> 