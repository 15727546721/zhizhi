<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.xu.infrastructure.persistent.dao.IEssayDao">

    <resultMap id="BaseResultMap" type="cn.xu.infrastructure.persistent.po.Essay">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="user_id" property="userId" jdbcType="BIGINT"/>
        <result column="content" property="content" jdbcType="VARCHAR"/>
        <result column="images" property="images" jdbcType="VARCHAR"/>
        <result column="topics" property="topics" jdbcType="VARCHAR"/>
        <result column="like_count" property="likeCount" jdbcType="BIGINT"/>
        <result column="comment_count" property="commentCount" jdbcType="BIGINT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- 定义 UserEntity 的结果映射 -->
    <resultMap id="UserResultMap" type="cn.xu.domain.user.model.entity.UserEntity">
        <id property="id" column="user_id"/>
        <result property="username" column="username"/>
        <result property="nickname" column="nickname"/>
        <result property="email" column="email"/>
        <result property="avatar" column="avatar"/>
        <result property="status" column="status"/>
        <result property="createTime" column="user_create_time"/>
        <result property="updateTime" column="user_update_time"/>
        <result property="gender" column="gender"/>
        <result property="phone" column="phone"/>
        <result property="region" column="region"/>
        <result property="birthday" column="birthday"/>
        <result property="description" column="description"/>
        <result property="followCount" column="follow_count"/>
        <result property="fansCount" column="fans_count"/>
        <result property="likeCount" column="user_like_count"/>
        <result property="lastLoginTime" column="last_login_time"/>
        <result property="lastLoginIp" column="last_login_ip"/>
    </resultMap>

    <!-- 定义 EssayVO 的结果映射，包括嵌套的 UserEntity -->
    <resultMap id="EssayWithUserResultMap" type="cn.xu.domain.essay.model.entity.EssayWithUserAggregation">
        <id property="id" column="id"/>
        <result property="content" column="content"/>
        <result property="images" column="images"/>
        <result property="topics" column="topics"/>
        <result property="likeCount" column="like_count"/>
        <result property="commentCount" column="comment_count"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <association property="user" resultMap="UserResultMap"/>
    </resultMap>
    <sql id="Base_Column_List">
        id
        , user_id, content, images, topics, lile_count, comment_count, create_time, update_time
    </sql>

    <insert id="insert" parameterType="cn.xu.domain.essay.model.entity.EssayEntity" useGeneratedKeys="true"
            keyProperty="id">
        insert into essay
        (user_id, content, images, topics, create_time, update_time)
        values
        (#{userId}, #{content}, #{images}, #{topics}, now(), now())
    </insert>

    <update id="update" parameterType="cn.xu.domain.essay.model.entity.EssayEntity">
        update `essay`
        <set>
            content = #{content},
            <if test="images != null">
                images = #{images,jdbcType=VARCHAR},
            </if>
            <if test="topics != null">
                topics = #{topics},
            </if>
            update_time = now()
        </set>
        where id = #{id}
    </update>
    <update id="updateCommentCount">
        update `essay`
        set comment_count = comment_count + #{count}
        where id = #{targetId}
    </update>

    <delete id="deleteById" parameterType="java.lang.Long">
        delete
        from `essay`
        where id = #{id}
    </delete>

    <delete id="deleteByIds" parameterType="java.util.List">
        delete from `essay`
        where id in
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="findById" resultMap="BaseResultMap" parameterType="java.lang.Long">
        select
        <include refid="Base_Column_List"/>
        from `essay`
        where id = #{id}
    </select>

    <select id="findWithoutCategory" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from `essay`
        where category_id is null
        order by create_time desc
    </select>

    <select id="count" resultType="java.lang.Long">
        select count(*)
        from `essay`
    </select>

    <select id="findEssayList" resultMap="EssayWithUserResultMap">
        select
        e.id, e.user_id, e.content, e.images, e.topics, e.like_count, e.comment_count, e.create_time, e.update_time,
        u.*
        from `essay` e
        left join `user` u on e.user_id = u.id
        <where>
            <if test="topic != null and topic != ''">
                e.content like concat('%',#{topic},'%')
            </if>
        </where>
        <choose>
            <when test="essayType == 'NEW'">
                order by e.create_time desc
            </when>
            <when test="essayType == 'HOT'">
                order by e.like_count desc
            </when>
            <otherwise>
                order by e.create_time asc
            </otherwise>
        </choose>
        limit #{offset}, #{size}
    </select>
</mapper> 