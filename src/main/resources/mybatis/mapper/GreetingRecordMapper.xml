<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.xu.repository.mapper.GreetingRecordMapper">
    
    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="cn.xu.model.entity.GreetingRecord">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="target_id" property="targetId"/>
        <result column="create_time" property="createTime"/>
    </resultMap>
    
    <!-- 基础列 -->
    <sql id="Base_Column_List">
        id, user_id, target_id, create_time
    </sql>
    
    <!-- 插入记录 -->
    <insert id="insert" parameterType="cn.xu.model.entity.GreetingRecord" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO greeting_record (user_id, target_id, create_time)
        VALUES (#{userId}, #{targetId}, #{createTime})
    </insert>
    
    <!-- 检查是否存在 -->
    <select id="existsByUserIdAndTargetId" resultType="boolean">
        SELECT EXISTS(
            SELECT 1 FROM greeting_record 
            WHERE user_id = #{userId} AND target_id = #{targetId}
        )
    </select>
    
    <!-- 删除记录 -->
    <delete id="deleteByUserIdAndTargetId">
        DELETE FROM greeting_record 
        WHERE user_id = #{userId} AND target_id = #{targetId}
    </delete>
    
    <!-- 双向删除（互关时清理） -->
    <delete id="deleteBidirectional">
        DELETE FROM greeting_record 
        WHERE (user_id = #{userId1} AND target_id = #{userId2})
           OR (user_id = #{userId2} AND target_id = #{userId1})
    </delete>
    
</mapper>
