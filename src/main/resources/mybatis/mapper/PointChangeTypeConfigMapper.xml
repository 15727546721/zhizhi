<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.xu.infrastructure.persistent.dao.PointChangeTypeConfigMapper">

    <resultMap id="pointChangeTypeConfigMap" type="cn.xu.infrastructure.persistent.po.PointChangeTypeConfig">
        <id column="id" property="id"/>
        <result column="change_type" property="changeType"/>
        <result column="change_name" property="changeName"/>
        <result column="point_value" property="pointValue"/>
        <result column="daily_limit" property="dailyLimit"/>
        <result column="description" property="description"/>
        <result column="is_active" property="isActive"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="findByChangeType" resultMap="pointChangeTypeConfigMap">
        SELECT *
        FROM point_change_type_config
        WHERE change_type = #{changeType}
    </select>

    <select id="findAllActive" resultMap="pointChangeTypeConfigMap">
        SELECT *
        FROM point_change_type_config
        WHERE is_active = 1
        ORDER BY create_time DESC
    </select>

</mapper>