<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.xu.infrastructure.persistent.dao.CollectFolderMapper">

    <resultMap id="BaseResultMap" type="cn.xu.infrastructure.persistent.po.CollectFolder">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="isDefault" column="is_default"/>
        <result property="articleCount" column="article_count"/>
        <result property="isPublic" column="is_public"/>
        <result property="sort" column="sort"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, user_id, name, description, is_default, article_count, is_public, sort, create_time, update_time
    </sql>

    <insert id="insert" parameterType="cn.xu.infrastructure.persistent.po.CollectFolder" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO collect_folder (user_id, name, description, is_default, article_count, is_public, sort,
                                    create_time, update_time)
        VALUES (#{userId}, #{name}, #{description}, #{isDefault}, #{articleCount}, #{isPublic}, #{sort}, now(), now())
    </insert>

    <update id="update" parameterType="cn.xu.infrastructure.persistent.po.CollectFolder">
        UPDATE collect_folder
        <set>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="description != null">description = #{description},</if>
            <if test="isDefault != null">is_default = #{isDefault},</if>
            <if test="articleCount != null">article_count = #{articleCount},</if>
            <if test="isPublic != null">is_public = #{isPublic},</if>
            <if test="sort != null">sort = #{sort},</if>
            update_time = now()
        </set>
        WHERE id = #{id}
    </update>

    <update id="updateArticleCount">
        UPDATE collect_folder
        SET article_count = #{count},
            update_time   = now()
        WHERE id = #{folderId}
    </update>

    <delete id="deleteById">
        DELETE
        FROM collect_folder
        WHERE id = #{id}
    </delete>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM collect_folder
        WHERE id = #{id}
    </select>

    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM collect_folder
        WHERE user_id = #{userId}
        ORDER BY sort, create_time DESC
    </select>

    <select id="selectByUserIdAndName" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM collect_folder
        WHERE user_id = #{userId}
          AND name = #{name}
        LIMIT 1
    </select>

    <select id="selectDefaultFolderByUserId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM collect_folder
        WHERE user_id = #{userId}
          AND is_default = 1
        LIMIT 1
    </select>
</mapper>