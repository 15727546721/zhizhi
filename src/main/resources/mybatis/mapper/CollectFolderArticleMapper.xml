<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.xu.infrastructure.persistent.dao.CollectFolderArticleMapper">

    <resultMap id="BaseResultMap" type="cn.xu.infrastructure.persistent.po.CollectFolderArticle">
        <id property="id" column="id"/>
        <result property="folderId" column="folder_id"/>
        <result property="articleId" column="article_id"/>
        <result property="userId" column="user_id"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, folder_id, article_id, user_id, create_time
    </sql>

    <insert id="insert" parameterType="cn.xu.infrastructure.persistent.po.CollectFolderArticle">
        INSERT INTO collect_folder_article (folder_id, article_id, user_id, create_time)
        VALUES (#{folderId}, #{articleId}, #{userId}, now())
    </insert>

    <delete id="deleteByFolderIdAndArticleId">
        DELETE
        FROM collect_folder_article
        WHERE folder_id = #{folderId}
          AND article_id = #{articleId}
    </delete>

    <delete id="deleteByFolderId">
        DELETE
        FROM collect_folder_article
        WHERE folder_id = #{folderId}
    </delete>

    <delete id="deleteByArticleId">
        DELETE
        FROM collect_folder_article
        WHERE article_id = #{articleId}
    </delete>

    <select id="selectByFolderId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM collect_folder_article
        WHERE folder_id = #{folderId}
        ORDER BY create_time DESC
    </select>

    <select id="selectByUserIdAndArticleId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM collect_folder_article
        WHERE user_id = #{userId}
          AND article_id = #{articleId}
    </select>

    <select id="selectByFolderIdAndArticleId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM collect_folder_article
        WHERE folder_id = #{folderId}
          AND article_id = #{articleId}
    </select>

    <select id="existsByFolderIdAndArticleId" resultType="boolean">
        SELECT COUNT(1) > 0
        FROM collect_folder_article
        WHERE folder_id = #{folderId}
          AND article_id = #{articleId}
    </select>

    <select id="countByFolderId" resultType="int">
        SELECT COUNT(1)
        FROM collect_folder_article
        WHERE folder_id = #{folderId}
    </select>
</mapper>