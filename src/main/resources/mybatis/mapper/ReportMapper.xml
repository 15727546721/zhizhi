<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.xu.repository.mapper.ReportMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="cn.xu.model.entity.Report">
        <id column="id" property="id"/>
        <result column="reporter_id" property="reporterId"/>
        <result column="target_type" property="targetType"/>
        <result column="target_id" property="targetId"/>
        <result column="target_user_id" property="targetUserId"/>
        <result column="reason" property="reason"/>
        <result column="description" property="description"/>
        <result column="evidence_urls" property="evidenceUrls"/>
        <result column="status" property="status"/>
        <result column="handler_id" property="handlerId"/>
        <result column="handle_result" property="handleResult"/>
        <result column="handle_action" property="handleAction"/>
        <result column="handle_time" property="handleTime"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- 基础列 -->
    <sql id="BaseColumns">
        id, reporter_id, target_type, target_id, target_user_id, reason, description,
        evidence_urls, status, handler_id, handle_result, handle_action, handle_time,
        create_time, update_time
    </sql>

    <!-- 插入举报 -->
    <insert id="insert" parameterType="cn.xu.model.entity.Report" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO report (
            reporter_id, target_type, target_id, target_user_id, reason, description,
            evidence_urls, status, create_time, update_time
        ) VALUES (
            #{reporterId}, #{targetType}, #{targetId}, #{targetUserId}, #{reason}, #{description},
            #{evidenceUrls}, #{status}, #{createTime}, #{updateTime}
        )
    </insert>

    <!-- 根据ID查询 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT <include refid="BaseColumns"/>
        FROM report
        WHERE id = #{id}
    </select>

    <!-- 更新举报 -->
    <update id="updateById" parameterType="cn.xu.model.entity.Report">
        UPDATE report
        <set>
            <if test="status != null">status = #{status},</if>
            <if test="handlerId != null">handler_id = #{handlerId},</if>
            <if test="handleResult != null">handle_result = #{handleResult},</if>
            <if test="handleAction != null">handle_action = #{handleAction},</if>
            <if test="handleTime != null">handle_time = #{handleTime},</if>
            update_time = #{updateTime}
        </set>
        WHERE id = #{id}
    </update>

    <!-- 通用查询条件 -->
    <sql id="queryCondition">
        <where>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="targetType != null">
                AND target_type = #{targetType}
            </if>
            <if test="reason != null">
                AND reason = #{reason}
            </if>
            <if test="reporterId != null">
                AND reporter_id = #{reporterId}
            </if>
            <if test="targetUserId != null">
                AND target_user_id = #{targetUserId}
            </if>
            <if test="keyword != null and keyword != ''">
                AND description LIKE CONCAT('%', #{keyword}, '%')
            </if>
        </where>
    </sql>

    <!-- 分页查询举报列表 -->
    <select id="selectReportList" resultMap="BaseResultMap">
        SELECT * FROM report
        <include refid="queryCondition"/>
        ORDER BY 
            CASE WHEN status = 0 THEN 0 ELSE 1 END,
            create_time DESC
        LIMIT #{offset}, #{limit}
    </select>

    <!-- 统计举报数量 -->
    <select id="countReportList" resultType="long">
        SELECT COUNT(*) FROM report
        <include refid="queryCondition"/>
    </select>

    <!-- 查询用户的举报记录 -->
    <select id="selectByReporterId" resultMap="BaseResultMap">
        SELECT * FROM report
        WHERE reporter_id = #{reporterId}
        ORDER BY create_time DESC
        LIMIT #{offset}, #{limit}
    </select>

    <!-- 统计用户的举报数量 -->
    <select id="countByReporterId" resultType="long">
        SELECT COUNT(*) FROM report WHERE reporter_id = #{reporterId}
    </select>

    <!-- 检查是否已举报 -->
    <select id="checkExists" resultType="int">
        SELECT COUNT(*) FROM report
        WHERE reporter_id = #{reporterId}
          AND target_type = #{targetType}
          AND target_id = #{targetId}
          AND status = 0
    </select>

    <!-- 统计各状态举报数量 -->
    <select id="countByStatus" resultType="java.util.Map">
        SELECT status, COUNT(*) as count FROM report GROUP BY status
    </select>

    <!-- 批量更新状态为忽略 -->
    <update id="batchIgnore">
        UPDATE report
        SET status = 3,
            handler_id = #{handlerId},
            handle_time = NOW(),
            update_time = NOW()
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
        AND status = 0
    </update>

</mapper>
