<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.xu.infrastructure.persistent.dao.ITopicDao">

    <resultMap id="BaseResultMap" type="cn.xu.infrastructure.persistent.po.TopicPO">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="user_id" property="userId" jdbcType="BIGINT"/>
        <result column="content" property="content" jdbcType="VARCHAR"/>
        <result column="images" property="images" jdbcType="VARCHAR"/>
        <result column="category_id" property="categoryId" jdbcType="BIGINT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id
        , user_id, content, images, category_id, create_time, update_time
    </sql>

    <insert id="insert" parameterType="cn.xu.infrastructure.persistent.po.TopicPO">
        insert into topic
        (user_id, content, images,
        <if test="categoryId != null">
            category_id,
        </if>
        create_time, update_time)
        values
        (#{userId}, #{content}, #{images,jdbcType=VARCHAR},
        <if test="categoryId != null">
            #{categoryId},
        </if>
        now(), now())
    </insert>

    <update id="update" parameterType="cn.xu.infrastructure.persistent.po.TopicPO">
        update topic
        <set>
            content = #{content},
            <if test="images != null">
                images = #{images,jdbcType=VARCHAR},
            </if>
            <if test="categoryId != null">
                category_id = #{categoryId},
            </if>
            update_time = now()
        </set>
        where id = #{id}
    </update>

    <delete id="deleteById" parameterType="java.lang.Long">
        delete
        from topic
        where id = #{id}
    </delete>

    <delete id="deleteByIds" parameterType="java.util.List">
        delete from topic
        where id in
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="findById" resultMap="BaseResultMap" parameterType="java.lang.Long">
        select
        <include refid="Base_Column_List"/>
        from topic
        where id = #{id}
    </select>

    <select id="findAll" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from topic
        order by create_time desc
    </select>

    <select id="findHotTopics" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from topic
        order by create_time desc
        limit #{limit}
    </select>

    <select id="findByCategoryId" resultMap="BaseResultMap" parameterType="java.lang.Long">
        select
        <include refid="Base_Column_List"/>
        from topic
        where category_id = #{categoryId}
        order by create_time desc
    </select>

    <select id="findWithoutCategory" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from topic
        where category_id is null
        order by create_time desc
    </select>
</mapper> 