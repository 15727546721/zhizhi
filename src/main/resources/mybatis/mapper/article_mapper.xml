<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.xu.infrastructure.persistent.dao.IArticleDao">

    <resultMap id="BaseResultMap" type="cn.xu.infrastructure.persistent.po.Article">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="description" column="description" jdbcType="VARCHAR"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
        <result property="coverUrl" column="cover_url" jdbcType="VARCHAR"/>
        <result property="authorId" column="author_id" jdbcType="BIGINT"/>
        <result property="categoryId" column="category_id" jdbcType="BIGINT"/>
        <result property="deleted" column="deleted" jdbcType="CHAR"/>
        <result property="status" column="status" jdbcType="CHAR"/>
        <result property="commentsEnabled" column="comments_enabled" jdbcType="CHAR"/>
        <result property="isTop" column="is_top" jdbcType="CHAR"/>
        <result property="viewCount" column="view_count" jdbcType="BIGINT"/>
        <result property="favoritesCount" column="favorites_count" jdbcType="BIGINT"/>
        <result property="likeCount" column="like_count" jdbcType="BIGINT"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id
        ,title,content,
        cover_url,author_id,category_id,
        deleted,status,comments_enabled,
        is_top,view_count,favorites_count,
        like_count,create_time,update_time
    </sql>

    <insert id="insert" parameterType="cn.xu.infrastructure.persistent.po.Article">
        INSERT INTO article (title, description, content, cover_url, author_id, category_id, deleted, status, comments_enabled,
                              is_top, view_count, favorites_count, like_count, create_time, update_time)
        VALUES (#{title}, #{description}, #{content}, #{coverUrl}, #{authorId}, #{categoryId}, #{deleted}, #{status},
                #{commentsEnabled}, #{isTop}, #{viewCount}, #{favoritesCount}, #{likeCount}, now(),
                now())
    </insert>
    <select id="queryByPage" resultType="cn.xu.infrastructure.persistent.po.Article">
        SELECT id, title, description, content, cover_url
        FROM article
        WHERE deleted = '0'
        ORDER BY id DESC
        LIMIT #{page}, #{size}
    </select>
</mapper>
