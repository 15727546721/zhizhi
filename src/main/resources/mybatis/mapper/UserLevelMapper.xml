<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.xu.repository.mapper.UserLevelMapper">

    <resultMap id="BaseResultMap" type="cn.xu.model.entity.UserLevel">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="userId" column="user_id" jdbcType="BIGINT"/>
        <result property="level" column="level" jdbcType="INTEGER"/>
        <result property="levelName" column="level_name" jdbcType="VARCHAR"/>
        <result property="currentExp" column="current_exp" jdbcType="BIGINT"/>
        <result property="nextLevelExp" column="next_level_exp" jdbcType="BIGINT"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, user_id, level, level_name, current_exp, next_level_exp, create_time, update_time
    </sql>

    <select id="findByUserId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM user_level
        WHERE user_id = #{userId}
    </select>

    <insert id="insert" parameterType="cn.xu.model.entity.UserLevel" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user_level (user_id, level, level_name, current_exp, next_level_exp, create_time, update_time)
        VALUES (#{userId}, #{level}, #{levelName}, #{currentExp}, #{nextLevelExp}, now(), now())
    </insert>

    <update id="update" parameterType="cn.xu.model.entity.UserLevel">
        UPDATE user_level
        SET level = #{level},
            level_name = #{levelName},
            current_exp = #{currentExp},
            next_level_exp = #{nextLevelExp},
            update_time = now()
        WHERE id = #{id}
    </update>

    <select id="findRanking" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM user_level
        ORDER BY level DESC, current_exp DESC
        LIMIT #{limit}
    </select>

</mapper>