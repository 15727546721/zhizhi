<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.xu.infrastructure.persistent.dao.IArticleCategoryDao">

    <resultMap id="BaseResultMap" type="cn.xu.infrastructure.persistent.po.ArticleCategoryRelation">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="articleId" column="article_id" jdbcType="BIGINT"/>
        <result property="categoryId" column="category_id" jdbcType="BIGINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id
        ,article_id,category_id
    </sql>
    <insert id="insert" parameterType="cn.xu.infrastructure.persistent.po.ArticleCategoryRelation">
        INSERT INTO article_category_relation (article_id, category_id)
        VALUES (#{articleId}, #{categoryId})
    </insert>
    <delete id="deleteByArticleId">
        DELETE
        FROM article_category_relation
        WHERE article_id = #{articleId}
    </delete>
</mapper>
