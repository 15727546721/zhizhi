<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.xu.infrastructure.persistent.dao.IUserDao">

    <resultMap id="BaseResultMap" type="cn.xu.infrastructure.persistent.po.User">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
        <result property="nickname" column="nickname" jdbcType="VARCHAR"/>
        <result property="avatar" column="avatar" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="CHAR"/>
        <result property="createdTime" column="created_time" jdbcType="TIMESTAMP"/>
        <result property="updatedTime" column="updated_time" jdbcType="TIMESTAMP"/>
    </resultMap>


    <sql id="Base_Column_List">
        id
        ,username,password,
        email,nickname,avatar,
        role,status,created_time,
        updated_time
    </sql>

    <insert id="insertUser">
        insert into user (id, username, password, email, nickname, avatar, role, status, created_time, updated_time)
        values (#{user.id}, #{user.username}, #{user.password}, #{user.email}, #{user.nickname}, #{user.avatar},
                #{role}, #{user.status}, #{user.createdTime}, #{user.updatedTime})
    </insert>
    <update id="updateUser">
        update user
        set username=#{user.username},
            password=#{user.password},
            email=#{user.email},
            nickname=#{user.nickname},
            avatar=#{user.avatar},
            role=#{role},
            status=#{user.status},
            updated_time=#{user.updatedTime}
        where id = #{user.id}
    </update>
    <delete id="deleteUser">
        delete
        from user
        where id = #{userId}
    </delete>

    <select id="selectUserByUserName" resultType="cn.xu.domain.user.model.valobj.LoginFormVO">
        select id, username, password
        from user
        where username = #{username}
    </select>
    <select id="selectUserById" resultType="cn.xu.domain.user.model.entity.UserEntity">
        select id,
               username,
               password,
               email,
               nickname,
               avatar,
               status,
               created_time,
               updated_time
        from user
        where id = #{userId}
    </select>


    <!-- 定义resultMap来映射用户信息及其角色 -->
    <resultMap id="userInfoWithRolesMap" type="cn.xu.domain.user.model.entity.UserInfoEntity">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="nickname" column="nickname"/>
        <result property="email" column="email"/>
        <result property="avatar" column="avatar"/>
        <result property="status" column="status"/>
        <!-- 使用collection标签的子标签collection来处理角色集合 -->
        <collection property="roles" ofType="string">
            <constructor>
                <arg column="role_name"/>
            </constructor>
        </collection>
    </resultMap>

    <!-- SQL查询，使用JOIN来联接user表和role表 -->
    <select id="selectUserInfoById" resultMap="userInfoWithRolesMap">
        SELECT u.id,
               u.username,
               u.password,
               u.nickname,
               u.email,
               u.avatar,
               u.status,
               r.role_name
        FROM user u
                 LEFT JOIN user_role ur ON u.id = ur.user_id
                 LEFT JOIN role r ON ur.role_id = r.id
        where u.id = #{userId}
    </select>

    <select id="selectUserByPage" resultType="cn.xu.infrastructure.persistent.po.User">
        SELECT u.id,
               u.username,
               u.email,
               u.nickname,
               u.avatar,
               u.status,
               u.created_time as createdTime,
               u.updated_time as updatedTime
        FROM user u LIMIT #{page}, #{size}
    </select>

    <select id="selectAdminByPage" resultType="cn.xu.infrastructure.persistent.po.User">
        SELECT u.id,
               u.username,
               u.email,
               u.nickname,
               u.avatar,
               u.status,
               u.created_time as createdTime,
               u.updated_time as updatedTime
        FROM user u
                 LEFT JOIN user_role ur ON u.id = ur.user_id
                 LEFT JOIN role r ON ur.role_id = r.id
        WHERE r.role_name = 'admin'
            LIMIT #{page}
            , #{size}
    </select>
</mapper>